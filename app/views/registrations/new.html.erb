<h1>Sign Up</h1> 

<%= form_with model: @user, url: sign_up_path do |f| %> 
    <% if @user.errors.any? %> 
        <div class="alert alert-danger">
            <% @user.errors.full_messages.each do |message| %> 
                <%= message %>
            <% end %> 
        </div>
    <% end %>

    <div class="mb-3">
        <%= f.label "Email", class: "form-control" %> 
    </div> 
    <div class="mb-3">
        <%= f.text_field :email, class: "form-control"%> 
    </div> 
    <div class="mb-3">
        <%= f.label "Password", class: "form-control" %> 
    </div> 
    <div class="mb-3">
        <%= f.text_field :password, class: "form-control", placeholder: "Password" %> 
    </div> 
    <div class="mb-3">
     <%= f.label "Confirm Password", class: "form-control" %> 
    </div> 
    <div class="mb-3">
        <%= f.text_field :password_confirmation, class: "form-control", placeholder: "Password" %> 
    </div> 
    <div class="mb-3">
        <%= f.submit class: "btn btn-primary" %> 
    </div>
<% end %>